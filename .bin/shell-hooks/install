
function install_link() {
  if [[ "$ROOT" == "uninstall" ]]
  then
    echo "Removing $2."
    rm "$2"
  else
    if [[ "$3" != "--no-backup" ]]
    then
      if [[ -e "$2" ]]
      then
        if [[ ! -e "$2.backup" ]]
        then
          echo "Backing up $2."
          mv "$2" "$2.backup"
        fi
        rm "$2"
      fi
    fi

    absolute="$ROOT/code/.bin/shell-hooks/$1"
    echo "Linking $(basename $2) to $absolute."
    mkdir -p "$(dirname $2)"
    ln -sf "$absolute" "$2"
  fi

}

#set -e
ROOT=$1

if [[ (! -e "$ROOT") && ("$ROOT" != "uninstall") ]]
then
  echo "Root directory is missing. $ROOT"
  exit 1
fi

install_link "bashrc" ~/.bashrc
install_link "bash_profile" ~/.bash_profile
install_link "zshenv" ~/.zshenv

install_link "shell-hooks.sh" ~/.local/bin/hooks --no-backup
install_link "fish" ~/.config/fish/conf.d/com.elegantchaos.xpkg.fish --no-backup
